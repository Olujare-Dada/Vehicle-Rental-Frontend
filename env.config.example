# Environment Configuration for RentEasy Frontend
# Copy this file to .env.local and modify as needed

# Backend Environment (uncomment one of the following)
# Development - Java Spring Backend (localhost:8080)
NEXT_PUBLIC_ENV=development

# Production - Render.com Backend
# NEXT_PUBLIC_ENV=production

# Alternative: Force specific backend URL (overrides environment detection)
# NEXT_PUBLIC_BACKEND_URL=http://localhost:8080
# NEXT_PUBLIC_BACKEND_URL=https://vehicle-rental-backend-deployment.onrender.com

# Development Backend URL (Java Spring)
NEXT_PUBLIC_DEV_BACKEND_URL=http://localhost:8080

# Production Backend URL (Render.com)
NEXT_PUBLIC_PROD_BACKEND_URL=https://vehicle-rental-backend-deployment.onrender.com

# Debug Mode (shows backend URL in console)
NEXT_PUBLIC_DEBUG_MODE=true
